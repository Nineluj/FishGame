{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "jsx": "react",
        "baseUrl": ".",
        "paths": {
            "@/*": ["src/*"],
            "@assets/*": ["assets/*"],
            "@public/*": ["public/*"],
            "@main/*": ["src/main/*"],
            "@models/*": ["src/models/*"],
            "@renderer*/": ["src/renderer/*"],
            "@utils/*": ["src/utils/*"]
        },
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "noImplicitThis": true,
        "strictNullChecks": true,
        "sourceMap": true,
        "target": "esnext",
        "strict": true,
        "noImplicitReturns": true
    },
    "exclude": ["node_modules"],
    "include": ["custom.d.ts", "src/"]
}
